<%= render 'shared/content_title', title: "Login!" %>

<div class='well'>
  <%= form_tag '/login' do %>
    <div class='control-group'>
      <%= label_tag :username %>
      <%= text_field_tag :username %><br />
    </div>
    <div class='control-group'>
      <%= label_tag :password %>
      <%= password_field_tag :password %><br />
    </div>

    <%= submit_tag 'Login', class: 'btn btn-primary' %>
  <% end %>
</div>